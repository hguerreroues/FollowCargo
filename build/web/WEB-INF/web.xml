<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>com.followcargo.transporte.controlador.ControladorUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <jsp-file>/dashboard.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ListVehicle</servlet-name>
        <jsp-file>/reportes/listado-vehiculos.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CreateRoute</servlet-name>
        <jsp-file>/crear-ruta.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <!-- Inicio de Planificación de Rutas -->
    <servlet>
        <servlet-name>CreateTrip</servlet-name>
        <jsp-file>/WEB-INF/jsp/rutas/crear-viaje.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateTrip</servlet-name>
        <url-pattern>/crear-viaje</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListTrips</servlet-name>
        <jsp-file>/reportes/listado-rutas.jsp</jsp-file>
    </servlet>
    <!-- Fin Planificación de Rutas -->
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/usuario</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/Usuario</url-pattern>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListVehicle</servlet-name>
        <url-pattern>/vehiculos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListTrips</servlet-name>
        <url-pattern>/rutas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateRoute</servlet-name>
        <url-pattern>/crear-ruta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
